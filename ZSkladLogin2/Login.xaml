<Window x:Class="ZSkladLogin2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZSkladLogin2"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtBox" Margin="20" TextWrapping="Wrap" Text="lager" FontSize="40"/>
        <PasswordBox x:Name="lblPasswordBox" FontSize="20" Margin="20" Grid.Row="1"/>
        <Button x:Name="btPassword"  Margin="50,10,50,10" Grid.Row="2" Click="btPassword_Click"/>

    </Grid>
</Window>
